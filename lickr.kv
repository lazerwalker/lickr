#:kivy 1.0
#:import kivy kivy

<lickr>:
    canvas:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            size: self.size

    BoxLayout:
        padding: '10dp'
        spacing: '10dp'
        size_hint: 1, None
        pos_hint: {'top': 1}
        height: '44dp'
        Label:
            height: '24dp'
            text_size: self.width, None
            color: (1, 1, 1, .8)
